{
	"name": "openui5-sample-app",
	"version": "0.3.0",
	"description": "Sample of an OpenUI5 app",
	"private": true,
	"type": "module",
	"engines": {
		"node": ">=18.14.0",
		"npm": ">=9"
	},
	"scripts": {
		"start": "ui5 serve",
		"lint": "eslint webapp",
		"karma": "karma start",
		"karma-ci": "rimraf coverage && karma start karma-ci.conf.js",
		"watch": "npm run karma",
		"test": "npm run lint && npm run karma-ci",
		"test:nodejs": "node --test webapp/test/unit-node-test-runner",
		"test:nodejs:coverage": "node --test --experimental-test-coverage webapp/test/unit-node-test-runner",
		"build": "ui5 build -a --clean-dest",
		"build-self-contained": "ui5 build self-contained -a --clean-dest",
		"serve-dist": "ws --compress -d dist"
	},
	"devDependencies": {
		"@ui5/middleware-code-coverage": "^1.0.3",
		"eslint": "^8.46.0",
		"happy-dom": "^10.9.0",
		"jsdom": "^22.1.0",
		"karma": "^6.4.2",
		"karma-chrome-launcher": "^3.2.0",
		"karma-coverage": "^2.2.1",
		"karma-ui5": "^3.0.3",
		"local-web-server": "^5.3.0",
		"rimraf": "^5.0.1"
	},
	"peerDependencies": {
		"@ui5/cli": ">=3"
	}
}
